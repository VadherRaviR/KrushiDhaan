<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <style type="text/tailwindcss">
        @layer utilities {
            .content-auto {
                content-visibility: auto;
            }
        }
        body{
            background-image: linear-gradient(90deg, rgb(84, 103, 88), rgb(46, 76, 61), rgb(174, 239, 204), rgb(174, 239, 204), rgb(1, 44, 1)) !important;
        }
    </style>
    <title>Register As</title>
</head>

<body class="bg-gradient-to-r from-green-300 via-green-200 to-green-300 flex flex-col items-center justify-center h-screen">

    <!-- Container for the Form -->
    <div class="bg-white p-10 rounded-xl shadow-lg flex items-center justify-center space-x-8">

        <!-- Farmer Image -->
        <div class="hidden md:block">
            <img class="object-cover h-64 w-auto"
                src="/image/Indian_farmer_man_kneeling_and_holding_crop_plant_vector_image_on_VectorStock-removebg-preview.png"
                alt="Farmer Image">
        </div>

        <!-- Form Section -->
        <div class="max-w-sm">
            <h2 class="text-3xl font-extrabold mb-4 text-center text-green-700">Register As</h2>

            <form action="/register/selected_categoryPost" method="POST" class="space-y-4">
                <div>
                    <label for="user-category" class="block text-lg font-semibold text-gray-700 mb-1">Select Category</label>
                    <select id="user-category" name="user[c]" required
                        class="block w-full p-3 border border-gray-300 rounded-lg focus:ring focus:ring-green-500 focus:border-green-500">
                        <option value="" disabled selected>Select your category</option>
                        <option value="Farmer">Farmer</option>
                        <option value="Simple-User">Simple User</option>
                    </select>
                </div>

                <!-- Submit Button -->
                <button type="submit"
                    class="w-full bg-green-500 text-white font-bold py-3 px-6 rounded-lg hover:bg-green-600 transition duration-300">
                    Submit
                </button>
            </form>
        </div>

        <!-- Another Farmer Image -->
        <div class="hidden md:block">
            <img class="object-cover h-64 w-auto"
                src="/image/Indian_Farmers_PNG_Picture__Cartoon_Indian_Farmer__Indian_Farmers__Cartoon__India_PNG_Image_For_Free_Download-removebg-preview.png"
                alt="Cartoon Farmer">
        </div>
    </div>

</body>

</html>
