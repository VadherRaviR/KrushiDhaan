  <style>
    body {
      font-family: Arial, sans-serif;
     background-image: linear-gradient(90deg, rgb(84, 103, 88), rgb(46, 76, 61), rgb(174, 239, 204), rgb(174, 239, 204), rgb(1, 44, 1));
      
    }
    .container {
      width: 50%;
      margin: auto;
      padding: 20px;
      background-color: transparent;
      border: 1px solid rgb(3, 29, 3);
      box-shadow: 0px 10px 10px rgb(3, 29, 3);
      border-radius: 10px;
      color: white;
    }
    .form-control {
      margin-bottom: 15px;
    }
    .form-control label {
      display: block;
      margin-bottom: 5px;
    }
    .form-control input {
      width: 100%;
      padding: 8px;
      box-sizing: border-box;
    }
    .btn {
      padding: 10px 15px;
      background-color: #28a745;
      color: white;
      border: none;
      cursor: pointer;
    }
    .btn:disabled {
      background-color: grey;
      cursor: not-allowed;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
