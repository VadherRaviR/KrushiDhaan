        body {  
            margin: 0;  
            font-family: Arial, sans-serif;  
            background-image: linear-gradient(90deg, rgb(84, 103, 88), rgb(46, 76, 61), rgb(174, 239, 204), rgb(174, 239, 204), rgb(1, 44, 1));   
            box-sizing: border-box;   
        }  
 
.container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
}       
.crops-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    padding: 20px;
}

.crop-card {
    background-color: transparent;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 10px;
    text-align: center;
    transition: transform 0.3s ease;
}

.crop-card img {
    width: 100%;
    border-radius: 10px;
    height: 250px;
    object-fit: cover;
}

.crop-card h3 {
    margin: 10px 0;
    font-size: 1.5em;
    color: rgb(2, 30, 2);
}

.crop-card p {
    color: white;
    font-size: 1.3rem;
    font-weight: 600;
}

.crop-card:hover {
    transform: scale(1.05);
}
h2 {  
            font-size: 24px;  
            margin: 10px 0;  
        }  
 
        .price {  
            color: green;  
            font-weight: bold;  
        }  
        header {  
            width: 100%;  
            text-align: center;  
            background-color: tomato;  
            padding: 20px;  
        }  
    </style>  
</head>  
